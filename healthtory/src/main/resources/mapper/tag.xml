<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="healthtory.site.healthtory.domain.tag.TagDao">

	<select id="findById"
		resultType="healthtory.site.healthtory.domain.tag.Tag">
		SELECT * FROM tag WHERE tag_id=#{tagId}
	</select>

	<select id="findAll"
		resultType="healthtory.site.healthtory.domain.tag.Tag">
		SELECT *
		FROM tag 
		WHERE tag_id=#{tagId}
	</select>

	<insert id="insert">
		INSERT
		INTO tag(tag_name,post_id)
		VALUES(#{tagName},#{postId})
	</insert>

    <update id="update">
          UPDATE tag
		  SET 
          tag_name = #{tagName},
          post_id = #{postId}
    </update>

	<delete id="delete">
		DELETE FROM tag WHERE tag_id = #{tagId}
	</delete>

</mapper>
