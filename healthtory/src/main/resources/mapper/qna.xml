<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="healthtory.site.healthtory.domain.qna.QnaDao">

	<select id="findById"
		resultType="healthtory.site.healthtory.domain.qna.Qna">
		SELECT * FROM qna WHERE qna_id=#{qnaId}
	</select>

	<select id="findAll"
		resultType="healthtory.site.healthtory.domain.qna.Qna">
		SELECT *
		FROM qna 
		WHERE qna_id=#{qnaId}
	</select>

	<insert id="insert">
		INSERT
		INTO qna(qna_title,qna_content,user_id,category_id)
		VALUES(#{qnaTitle}, #{qnaContent},#{userId}, #{categoryId})
	</insert>

    <update id="update">
          UPDATE qna
		  SET 
          qna_title = #{qnaTitle},
          qna_content = #{qnaContent},
		  user_id = #{userId},
          category_id = #{categoryId}
    </update>

	<delete id="delete">
		DELETE FROM qna WHERE qna_id = #{qnaId}
	</delete>

</mapper>
