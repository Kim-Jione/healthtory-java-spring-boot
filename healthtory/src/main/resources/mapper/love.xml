<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="healthtory.site.healthtory.domain.love.LoveDao">

	<select id="findById"
		resultType="healthtory.site.healthtory.domain.love.Love">
		SELECT * FROM love WHERE love_id=#{loveId}
	</select>

	<select id="findAll"
		resultType="healthtory.site.healthtory.domain.love.Love">
		SELECT *
		FROM love 
		WHERE love_id=#{loveId}
	</select>

	<insert id="insert">
		INSERT
		INTO love(user_id,post_id)
		VALUES(#{userId}, #{postId})
	</insert>

    <update id="update">
          UPDATE love
		  SET 
		  user_id = #{userId},
          post_id = #{postId}
    </update>

	<delete id="delete">
		DELETE FROM love WHERE love_id = #{loveId}
	</delete>

</mapper>
